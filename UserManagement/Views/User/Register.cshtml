@{
    ViewData["Title"] = "Register";
}
@{
}

<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Message"]
        </div>
    }
    <form asp-controller="User" asp-action="Register" method="post" class="shadow p-4 rounded border">
        <h1 class="text-center mb-4">Register</h1>
        <div class="form-group mb-3">
            <label for="Fullname" class="form-label">Fullname</label>
            <input type="text" class="form-control" id="Fullname" name="Fullname" placeholder="Enter Fullname" />
            @if (ViewData.ModelState["Fullname"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Fullname"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group mb-3">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter Username" />
            @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" />
            @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
        </div>

        <div class="text-center mb-4">
            <p>Already have an account? <a asp-controller="User" asp-action="Login" class="btn-link">Login</a></p>
        </div>
    </form>
</div>

<!-- Custom Styles for the Register Page -->
<style>

	.container {
		max-width: 500px;
        margin-top: 80px; 

	}

    .form-group label {
        font-weight: bold;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .alert-success {
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        border-radius: 5px;
    }

    .shadow {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .rounded {
        border-radius: 10px;
    }

    .border {
        border: 1px solid #ddd;
    }
</style>
