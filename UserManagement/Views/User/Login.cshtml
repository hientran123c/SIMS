@{
	ViewData["Title"] = "Login";
}
<div class="container">
    <!-- Login Form -->
    <form asp-controller="User" asp-action="Login" method="post" class="shadow p-4 rounded border">
        <h1 class="text-center mb-4">Login</h1>

        <div class="form-group mb-3">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter Username">
            @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password">
            @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary w-100 py-2">Login</button>
        </div>

        <div class="text-center">
            <p>Don't have an account? <a asp-controller="User" asp-action="Register" class="btn-link">Register</a></p>
        </div>
    </form>

            @if (ViewBag.IsLogin != null && ViewBag.IsLogin)
            {
                <div class="alert alert-success">
                    <p class="text-success">
                        Login Successful
                    </p>
                </div>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100 py-2">Back to Home</a>
            }
</div>

<!-- Custom Styles for the Login Page -->
<style>
    .container {
        max-width: 500px;
        margin-top: 80px;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .alert-success {
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        border-radius: 5px;
    }

    .btn-secondary {
        border-radius: 5px;
    }

    .shadow {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .rounded {
        border-radius: 10px;
    }

    .border {
        border: 1px solid #ddd;
    }
</style>
