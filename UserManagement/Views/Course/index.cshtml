@{
    ViewData["Title"] = "ManageCourse";
    Layout = "_Layout2";
}
@model IEnumerable<UserManagement.Models.Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        h2 {
            color: #343a40;
            text-align: center;
            margin-bottom: 30px;
        }

        .create-btn {
            margin-top: 20px;
        }

        .text-muted {
            margin-top: 20px;
            text-align: center;
        }

        table {
            margin-top: 30px;
            width: 100%;
        }

        th {
            background-color: #007bff;
            color: black;
            text-align: center;
        }

        td {
            vertical-align: middle;
            text-align: center;
        }

        .actions a {
            text-decoration: none;
            padding: 5px 15px;
            border-radius: 5px;
            font-size: 14px;
        }

            .actions a:hover {
                background-color: #007bff;
                color: white;
            }

        .create-btn {
            background-color: #28a745;
            color: white;
            padding: 12px 18px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            text-align: center;
            width: 200px;
            margin: 0 auto;
        }

            .create-btn:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
 

    <div class="container mt-5">
        <h2>Courses</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Credit</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Name</td>
                            <td>@course.Credit</td>
                            <td>@course.Description</td>
                            <td class="actions">
                                <a href="@Url.Action("Edit", new { id = course.Id })" class="btn btn-warning btn-sm" style="width:75px">Edit</a>
                                <a href="@Url.Action("Delete", new { id = course.Id })" class="btn btn-danger btn-sm" style="width:75px">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
           
        }
        else
        {
            <p class="text-muted">No courses available.</p>
        }
        <a href="@Url.Action("Create")" class="create-btn">Create New Course</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

