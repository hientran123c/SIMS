@{
    ViewData["Title"] = "Register";
    Layout = "_Layout2";
}

<div class="container mt-5">
    <form asp-controller="Account" asp-action="Register" method="post" class="shadow p-4 rounded border">
        <h1 class="text-center mb-4">Register</h1>
        <div class="form-group mb-3">
            <label for="Fullname" class="form-label">Fullname</label>
            <input type="text" class="form-control" id="Fullname" name="Fullname" placeholder="Enter Fullname" />
            @if (ViewData.ModelState["Fullname"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Fullname"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group mb-3">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter Username" />
            @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" />
            @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
            {
                <div class="text-danger">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</div>
            }
        </div>

        <div class="form-group mb-3">
            <label for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" />
        </div>

        <div class="form-group mb-3">
            <label for="RoleId" class="form-label">Role</label>
            <select class="form-control" id="RoleId" name="RoleId" required>
                <option value="">Select Role</option>
                @if (ViewBag.Roles != null)
                {
                    @foreach (var role in ViewBag.Roles as SelectList)
                    {
                        <option value="@role.Value">@role.Text</option>
                    }
                }
            </select>
            @if (ViewData.ModelState["RoleId"]?.Errors.Any() == true)
            {
                <span class="text-danger">@ViewData.ModelState["RoleId"].Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary btn-lg w-100 py-2">Register</button>
        </div>

        @if (!string.IsNullOrEmpty(TempData["RegisterMessage"] as string))
        {
            <div class="alert alert-success mt-3">
                @TempData["RegisterMessage"]
            </div>
        }

        @if (TempData["Redirect"] != null)
        {
            <script type="text/javascript">
                setTimeout(function() {
                    window.location.href = '@TempData["Redirect"]';
                }, 1000);
            </script>
        }
    </form>
</div>

<style>
    .container {
        max-width: 500px;
        margin-top: 50px;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .alert-success {
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ddd;
    }

    .btn-primary {
        border-radius: 5px;
    }

    .shadow {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .rounded {
        border-radius: 10px;
    }

    .border {
        border: 1px solid #ddd;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 5px;
    }
</style>



